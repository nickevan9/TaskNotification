<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/margin8dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin8dp"
    app:cardElevation="@dimen/margin8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin16dp"

        >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle_custom" />

        <TextView
            android:id="@+id/tvNameTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin32dp"
            android:text="Personal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text24sp"

            />

        <TextView
            android:id="@+id/tvTotalTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin16dp"
            android:text="10 Tasks"
            android:textSize="@dimen/text18sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>