<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/margin8dp"
    app:cardElevation="@dimen/margin8dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/ckTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/color_app" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/vertical_line" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTimeStart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:text="9:30 AM"
            android:textColor="@android:color/black" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin16dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgColor"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_app" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin8dp"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/margin8dp"
                    android:paddingRight="@dimen/margin8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Project meeting"
                            android:textColor="@color/color_app"
                            android:textSize="@dimen/text18sp" />

                        <ImageView
                            android:id="@+id/imgIgnore"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:paddingVertical="4dp"
                            android:paddingLeft="@dimen/margin8dp"
                            android:src="@drawable/ic_close" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTimeStartEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:30 - 10:30 AM" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8dp"
                        android:text="Health"
                        app:chipIcon="@drawable/circle_custom" />

                </LinearLayout>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>