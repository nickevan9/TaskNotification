<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#CCC0C0" />
            <padding
                android:bottom="30dp"
                android:left="30dp"
                android:right="30dp"
                android:top="30dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <item
        android:id="@+id/color_circle">
        <shape android:shape="oval">
            <solid android:color="@android:color/holo_blue_dark" />

            <size
                android:width="120dp"
                android:height="120dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFF" />
        </shape>

    </item>

</layer-list>